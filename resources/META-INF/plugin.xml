<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>AndroidDrawable</name>
  <version>1.0</version>
  <vendor email="645503254@qq.com" url="http://www.yourcompany.com">Drawable xhdpi 转换</vendor>

  <description><![CDATA[
      xhdpi图片转换，能任意转换Android Drawable下的各种规格格式 <br>
      <em>"ldpi", "mdpi", "hdpi", "xhdpi","xxhdpi", "xxxhdpi" </em>
      <em>比如我的美工人员设计了一个图片适合 xhdpi 分辨率的手机，我可以通过AndroidDrawable将这个xhdpi转换成</em>
      <em>"ldpi", "mdpi", "hdpi", "xhdpi","xxhdpi", "xxxhdpi"的图片</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="drawableaction" class="com.stardon.androiddrawable.DrawableAction" text="DrawableXhdpi"
            description="Android Drawable xhdpi 转换工具">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl D"/>
    </action>
  </actions>

</idea-plugin>